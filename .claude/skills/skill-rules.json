{
  "convex-backend-dev": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Convex backend development with MCP integration",
    "promptTriggers": {
      "keywords": [
        "convex",
        "backend",
        "query",
        "mutation",
        "action",
        "database",
        "schema",
        "server"
      ],
      "intentPatterns": [
        "(create|write|add|implement).*?(query|mutation|action|function)",
        "(update|modify|change).*?(schema|database|table)",
        "(backend|server).*?(logic|function|api)",
        "convex.*?(function|query|mutation)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "convex/**/*.ts",
        "convex/schema.ts",
        "convex/_generated/**/*"
      ],
      "contentPatterns": [
        "import.*convex/server",
        "query\\(",
        "mutation\\(",
        "action\\(",
        "defineSchema",
        "defineTable"
      ]
    }
  },
  "frontend-dev": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "high",
    "description": "React, TanStack Start, and Tailwind CSS frontend development",
    "promptTriggers": {
      "keywords": [
        "component",
        "frontend",
        "ui",
        "page",
        "layout",
        "react",
        "tanstack",
        "router",
        "route",
        "tailwind",
        "style",
        "form",
        "loader",
        "shadcn"
      ],
      "intentPatterns": [
        "(create|build|add|implement).*?(component|page|ui|layout|route)",
        "(style|design).*?(component|page|ui)",
        "(frontend|client|ui).*?(component|feature|page)",
        "(form|input|button|modal)",
        "(create|add).*?(server function|loader)",
        "(tanstack|react).*?(router|query|start)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "src/routes/**/*.tsx",
        "src/routes/__root.tsx",
        "components/**/*.tsx",
        "src/utils/*.functions.ts",
        "src/router.tsx"
      ],
      "contentPatterns": [
        "createFileRoute",
        "createServerFn",
        "@tanstack/react-router",
        "@tanstack/react-start",
        "@tanstack/react-query",
        "import.*react",
        "className=",
        "tailwind",
        "Route.useLoaderData"
      ]
    }
  },
  "example-skill": {
    "type": "domain",
    "enforcement": "suggest",
    "priority": "low",
    "description": "Example skill showing structure (replace with your skills)",
    "promptTriggers": {
      "keywords": [
        "example",
        "demo",
        "template"
      ],
      "intentPatterns": [
        "(how to|best practice).*?example",
        "(create|implement).*?demo"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "examples/**/*.ts",
        "src/example/**/*"
      ],
      "contentPatterns": [
        "import.*example",
        "Example\\("
      ]
    }
  },
  "task-management-dev": {
    "type": "meta",
    "enforcement": "suggest",
    "priority": "high",
    "description": "Task-driven development workflow and PBI management",
    "promptTriggers": {
      "keywords": [
        "task",
        "pbi",
        "backlog",
        "workflow",
        "delivery",
        "planning",
        "dev docs",
        "sprint",
        "feature"
      ],
      "intentPatterns": [
        "(create|start|plan|implement).*?(task|pbi|feature)",
        "(update|check|show).*?(backlog|tasks|progress)",
        "(dev docs|development docs).*?(create|update|status)",
        "(mark|set).*?(done|complete|in.?progress)",
        "(what|which).*?(task|pbi).*?(next|current)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "docs/delivery/**/*",
        "dev/active/**/*",
        "**/backlog.md",
        "**/tasks.md",
        "**/*-plan.md",
        "**/*-context.md"
      ],
      "contentPatterns": [
        "Status.*?(Proposed|Agreed|InProgress|InReview|Done)",
        "## Status History",
        "## Implementation Plan",
        "\\[.*?\\]\\(.*?tasks\\.md\\)",
        "PBI-\\d+"
      ]
    }
  },
  "code-simplifier": {
    "type": "quality",
    "enforcement": "suggest",
    "priority": "medium",
    "description": "Code simplification for clarity, consistency, and maintainability",
    "promptTriggers": {
      "keywords": [
        "simplify",
        "refactor",
        "clean up",
        "cleanup",
        "improve",
        "review",
        "readable",
        "clarity",
        "maintainable"
      ],
      "intentPatterns": [
        "(simplify|clean|improve|refactor).*?(code|function|component)",
        "(make|ensure).*?(readable|maintainable|clear)",
        "(code|review).*?(quality|standards)",
        "(reduce|remove).*?(complexity|nesting|duplication)"
      ]
    },
    "fileTriggers": {
      "pathPatterns": [
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx"
      ],
      "contentPatterns": [
        "\\?.*?\\?.*?:",
        "if.*?{.*?if.*?{.*?if",
        "TODO.*?simplify",
        "TODO.*?refactor"
      ]
    }
  }
}
